{
    "publisher": "Gwion",
    "name": "gwion-lsp",
    "description": "A VS Code Gwion plugin that runs gwiond.",
    "author": "the Gwion team",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Gwion/gwiond"
    },
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "contributes": {
        "languages": [
            {
                "id": "gwion",
                "aliases": [
                   "Gwion",
                   "gwion",
                   "gw"
                ],
                "extensions": [
                    ".gw"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
            "grammars": [
                     {
                             "language": "gwion",
                             "scopeName": "source.gwion",
                             "path": "./syntaxes/gw.tmGrammar.json"
                     }
             ]
    },
    "engines": {
        "vscode": "^1.86.0"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:horse64"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b ./",
        "watch": "tsc -b -w ./o",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
               "@types/vscode": "^1.56.0",
               "@types/glob": "^7.1.3",
               "@types/mocha": "^8.2.2",
               "@types/node": "14.x",
               "eslint": "^7.27.0",
               "@typescript-eslint/eslint-plugin": "^4.26.0",
               "@typescript-eslint/parser": "^4.26.0",
               "glob": "^7.1.7",
               "mocha": "^8.4.0",
               "typescript": "^4.3.2",
               "vscode-test": "^1.5.2"
    }
}
